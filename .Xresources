!#include "/home/andrew/.colors/earth"
#include "/home/andrew/.colors/sero"
!#include "/home/andrew/.colors/blush"
!#include "/home/andrew/.colors/light"


URxvt.cursorUnderline: true

URxvt.scrollBar: false
URxvt.scrollTtyOutput: true

! enables scrolling with Shift + Up/Down
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! enables copy/paste
URxvt.iso14755 : false
URxvt.perl-ext-common: clipboard
URxvt.keysym.C-C:   perl:clipboard:copy
URxvt.keysym.C-V:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

! arrow keys
URxvt.keysym.Control-Up:	\033[1;5A
URxvt.keysym.Control-Down:	\033[1;5B
URxvt.keysym.Control-Left:	\033[1;5D
URxvt.keysym.Control-Right:	\033[1;5C

! set font
URxvt.font: xft:droid sans mono:size=10:antialias=true

URxvt.letterSpace: 0

.URxvt.internalBorder: 4

*VT100.colorBDMode:                   true
*VT100.colorBD:                       red
*VT100.colorULMode:                   true
*VT100.colorUL:                       magenta
*VT100.veryBoldColors:                6
